<!DOCTYPE html>
<html>
    <head>
        <title>{{ page_title }}</title>
        <link rel="stylesheet" href="{{ url_for('static', filename='css/main.css') }}" type="text/css">
        <link rel="icon" href="{{ url_for('static', filename='favicon.ico') }}" type="image/x-icon">
        <style type="text/css" id="page_style">
            {% block page_style %}
            {% endblock %}
        </style>
    </head>
    <body>
    {% block overlay %}
        {% include "-email-overlay.jinja" %}
    {% endblock %}
    <header id="site_header">
    {% block site_header %}
        {% include "-site-header.jinja" %}
    {% endblock %}
    </header>
    <nav id="main_nav">
        <ul class="flex-list-row">
            <li>Category</li>
            <li>Category</li>
            <li>Category</li>
            <li>Category</li>
            <li>Category</li>
        </ul>
    </nav>
    <main>
        <div id="main_wrapper" class="outer_content_wrapper">
            <header id="page_header">
            {% block page_header %}
                <h1 id="page_headline">{{ page_headline }}</h1>
            {% endblock %}
            </header>

            {% if show_page_aside %}
                <aside id="page_aside">
                    <div id="page_aside_wrapper">
                        {% block page_aside %}
                            &ldquo; A new page rises from the ash-heap of ignorance. &rdquo;
                        {% endblock %}
                    </div>
                </aside>
            {% endif %}
            {% block content %}
            {% endblock %}
        </div>
    </main>
    <footer>
        <div id="footer_grid" class="outer_content_wrapper">
            <section class="footer_column" id="footer_social">
                <header>
                    <h4>Social Media</h4>
                </header>
                <ul class="flex-list-row">
                    <li><a href="#" class="circle-button" style="background-color: #4267B2;">F</a></li>
                    <li><a href="#" class="circle-button" style="background-color: #1DA1F2;">T</a></li>
                    <li><a href="#" class="circle-button" style="background-color: #405DE6;">I</a></li>
                </ul>
            </section>
            <section class="footer_column" id="footer_nav">
                <header>
                    <h4>Footer Navigation</h4>
                </header>
                <nav>
                    <ul>
                        <li><a href="{{ url_for('about') }}">About</a></li>
                        <li><a href="{{ url_for('contact') }}">Contact</a></li>
                        <li><a href="{{ url_for('products') }}">Products</a></li>
                    </ul>
                </nav>
            </section>
            <section class="footer_column" id="footer_partners">
                <header>
                    <h4>Partners Section</h4>
                </header>
                <ul>
                    <li>F</li>
                    <li>T</li>
                    <li>Y</li>
                </ul>
            </section>
            <section class="footer_column" id="footer_disclaimer">
                <header>
                    <h4>Disclaimer Zone</h4>
                </header>
                <p>
                    Sometimes contact information or some legal stipulations get placed here.
                </p>
            </section>

            <address id="footer_copyright">
                &copy; 2021 David Cloutman
            </address>
        </div>
    </footer>
    </body>
</html>
